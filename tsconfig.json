{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./out",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@renderer/*": ["src/renderer/src/*"]
    }
  },
  "include": ["src/main/**/*", "src/preload/**/*", "src/core/**/*", "src/cli/**/*"],
  "exclude": ["node_modules", "out", "dist"]
}
